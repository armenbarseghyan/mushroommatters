{%- comment -%}
  Meta tags for SEO and social sharing
{%- endcomment -%}

{%- assign og_title = page_title -%}
{%- assign og_url = canonical_url -%}
{%- assign og_type = 'website' -%}
{%- assign og_description = page_description | default: shop.description -%}

{%- if template contains 'product' -%}
  {%- assign og_type = 'product' -%}
  {%- if product.featured_media -%}
    <meta property="og:image" content="{{ product.featured_media | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="{{ product.featured_media | image_url: width: 1200 }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="1200">
  {%- endif -%}
{%- endif -%}

{%- if template contains 'article' -%}
  {%- assign og_type = 'article' -%}
  {%- if article.image -%}
    <meta property="og:image" content="{{ article.image | image_url: width: 1200 }}">
  {%- endif -%}
{%- endif -%}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description }}">

{%- if settings.social_facebook_link != blank -%}
  <meta property="fb:admins" content="{{ settings.social_facebook_link }}">
{%- endif -%}

<meta name="twitter:site" content="{{ shop.name }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title }}">
<meta name="twitter:description" content="{{ og_description }}">
