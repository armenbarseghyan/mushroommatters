{{ 'component-mushroom-reviews.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="mushroom-reviews section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="mushroom-reviews__header">
        <h2 class="mushroom-reviews__heading">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.description != blank -%}
          <div class="mushroom-reviews__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="mushroom-reviews__content">
      {%- if section.settings.reviews_app == 'judgeme' -%}
        <!-- Judge.me Reviews App Integration -->
        <div class="mushroom-reviews__app">
          <div class="mushroom-reviews__placeholder">
            <div class="mushroom-reviews__placeholder-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            </div>
            <h3 class="mushroom-reviews__placeholder-heading">
              {{ 'sections.mushroom_reviews.judgeme_placeholder_heading' | t }}
            </h3>
            <p class="mushroom-reviews__placeholder-text">
              {{ 'sections.mushroom_reviews.judgeme_placeholder_text' | t }}
            </p>
            <div class="mushroom-reviews__placeholder-actions">
              <a href="{{ section.settings.reviews_link }}" class="button button--primary">
                {{ 'sections.mushroom_reviews.view_reviews' | t }}
              </a>
            </div>
          </div>
        </div>
      {%- elsif section.settings.reviews_app == 'loox' -%}
        <!-- Loox Reviews App Integration -->
        <div class="mushroom-reviews__app">
          <div class="mushroom-reviews__placeholder">
            <div class="mushroom-reviews__placeholder-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            </div>
            <h3 class="mushroom-reviews__placeholder-heading">
              {{ 'sections.mushroom_reviews.loox_placeholder_heading' | t }}
            </h3>
            <p class="mushroom-reviews__placeholder-text">
              {{ 'sections.mushroom_reviews.loox_placeholder_text' | t }}
            </p>
            <div class="mushroom-reviews__placeholder-actions">
              <a href="{{ section.settings.reviews_link }}" class="button button--primary">
                {{ 'sections.mushroom_reviews.view_reviews' | t }}
              </a>
            </div>
          </div>
        </div>
      {%- elsif section.settings.reviews_app == 'okendo' -%}
        <!-- Okendo Reviews App Integration -->
        <div class="mushroom-reviews__app">
          <div class="mushroom-reviews__placeholder">
            <div class="mushroom-reviews__placeholder-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            </div>
            <h3 class="mushroom-reviews__placeholder-heading">
              {{ 'sections.mushroom_reviews.okendo_placeholder_heading' | t }}
            </h3>
            <p class="mushroom-reviews__placeholder-text">
              {{ 'sections.mushroom_reviews.okendo_placeholder_text' | t }}
            </p>
            <div class="mushroom-reviews__placeholder-actions">
              <a href="{{ section.settings.reviews_link }}" class="button button--primary">
                {{ 'sections.mushroom_reviews.view_reviews' | t }}
              </a>
            </div>
          </div>
        </div>
      {%- else -%}
        <!-- Default placeholder -->
        <div class="mushroom-reviews__placeholder">
          <div class="mushroom-reviews__placeholder-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
            </svg>
          </div>
          <h3 class="mushroom-reviews__placeholder-heading">
            {{ 'sections.mushroom_reviews.default_placeholder_heading' | t }}
          </h3>
          <p class="mushroom-reviews__placeholder-text">
            {{ 'sections.mushroom_reviews.default_placeholder_text' | t }}
          </p>
          <div class="mushroom-reviews__placeholder-actions">
            <a href="{{ section.settings.reviews_link }}" class="button button--primary">
              {{ 'sections.mushroom_reviews.view_reviews' | t }}
            </a>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Mushroom Reviews",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customer Reviews"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>See what our customers say about our premium mushroom extracts.</p>"
    },
    {
      "type": "select",
      "id": "reviews_app",
      "label": "Reviews App",
      "options": [
        {
          "value": "none",
          "label": "None (Placeholder)"
        },
        {
          "value": "judgeme",
          "label": "Judge.me"
        },
        {
          "value": "loox",
          "label": "Loox"
        },
        {
          "value": "okendo",
          "label": "Okendo"
        }
      ],
      "default": "judgeme"
    },
    {
      "type": "url",
      "id": "reviews_link",
      "label": "Reviews link",
      "info": "Link to reviews page or collection"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Mushroom Reviews"
    }
  ]
}
{% endschema %}
