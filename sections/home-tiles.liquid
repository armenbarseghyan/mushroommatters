{% comment %}
  Home Tiles Section
  Product/Benefit/Mushroom tiles for homepage
{% endcomment %}

{% stylesheet %}
.home-tiles {
  padding: 3rem 0;
}
.tiles-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}
.tile {
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  overflow: hidden;
  transition: transform 0.2s ease;
  background: white;
}
.tile:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0,0,0,0.1);
}
.tile__image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}
.tile__content {
  padding: 1.5rem;
}
.tile__title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: #333;
}
.tile__description {
  color: #666;
  margin-bottom: 1rem;
  line-height: 1.5;
}
.tile__badges {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1rem;
  flex-wrap: wrap;
}
.badge {
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  border-radius: 4px;
  background: #f0f0f0;
  color: #333;
}
.badge--primary {
  background: #333;
  color: white;
}
.tile__cta {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: #333;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  font-weight: 600;
  transition: background 0.2s ease;
}
.tile__cta:hover {
  background: #555;
}
{% endstylesheet %}

<div class="home-tiles">
  <div class="container">
    <h2>{{ section.settings.title | default: 'Shop by Category' }}</h2>
    <p>{{ section.settings.subtitle | default: 'Discover our range of functional mushroom products' }}</p>
    
    <div class="tiles-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'tile' %}
            <div class="tile">
              {% if block.settings.image %}
                <img 
                  src="{{ block.settings.image | image_url: width: 400 }}" 
                  alt="{{ block.settings.image.alt | default: block.settings.title | escape }}" 
                  class="tile__image"
                  width="400"
                  height="300"
                  loading="lazy"
                >
              {% endif %}
              
              <div class="tile__content">
                <h3 class="tile__title">{{ block.settings.title }}</h3>
                <p class="tile__description">{{ block.settings.description }}</p>
                
                {% if block.settings.badges != blank %}
                  <div class="tile__badges">
                    {% assign badge_list = block.settings.badges | split: ',' %}
                    {% for badge in badge_list %}
                      <span class="badge">{{ badge | strip }}</span>
                    {% endfor %}
                  </div>
                {% endif %}
                
                {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                  <a href="{{ block.settings.button_url }}" 
                     class="tile__cta" 
                     data-tile-button 
                     data-category="{{ block.settings.category | default: 'products' }}" 
                     data-url="{{ block.settings.button_url }}">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

