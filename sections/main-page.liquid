{% comment %}
  Main Page Section
  Static page layout
{% endcomment %}

{% stylesheet %}
.main-page {
  padding: 2rem 0;
}

.page-header {
  margin-bottom: 2rem;
}

.page-header--left {
  text-align: left;
}

.page-header--center {
  text-align: center;
}

.page-header--right {
  text-align: right;
}

.page-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: rgb(var(--color-base-text));
  line-height: 1.2;
}

.page-content {
  max-width: 800px;
  font-size: 1.125rem;
  line-height: 1.7;
  color: rgb(var(--color-base-text));
}

.page-header--center + .page-content {
  margin: 0 auto;
  text-align: left;
}

.page-content h2,
.page-content h3,
.page-content h4,
.page-content h5,
.page-content h6 {
  margin: 2rem 0 1rem 0;
  color: rgb(var(--color-base-text));
}

.page-content h2 {
  font-size: 2rem;
  font-weight: 600;
}

.page-content h3 {
  font-size: 1.5rem;
  font-weight: 600;
}

.page-content h4 {
  font-size: 1.25rem;
  font-weight: 600;
}

.page-content p {
  margin-bottom: 1.5rem;
}

.page-content ul,
.page-content ol {
  margin-bottom: 1.5rem;
  padding-left: 2rem;
}

.page-content li {
  margin-bottom: 0.5rem;
}

.page-content img {
  max-width: 100%;
  height: auto;
  border-radius: 0.5rem;
  margin: 1.5rem 0;
}

.page-content blockquote {
  border-left: 4px solid rgb(var(--color-base-accent-1));
  padding-left: 1.5rem;
  margin: 2rem 0;
  font-style: italic;
  color: rgba(var(--color-base-text), 0.8);
}

.page-content table {
  width: 100%;
  border-collapse: collapse;
  margin: 2rem 0;
}

.page-content th,
.page-content td {
  border: 1px solid rgba(var(--color-base-text), 0.2);
  padding: 0.75rem;
  text-align: left;
}

.page-content th {
  background: rgba(var(--color-base-text), 0.05);
  font-weight: 600;
}

.page-content a {
  color: rgb(var(--color-base-accent-1));
  text-decoration: underline;
  transition: color 0.2s ease;
}

.page-content a:hover {
  color: rgba(var(--color-base-accent-1), 0.8);
}

.page-content code {
  background: rgba(var(--color-base-text), 0.1);
  padding: 0.125rem 0.25rem;
  border-radius: 0.25rem;
  font-family: 'Courier New', monospace;
  font-size: 0.875em;
}

.page-content pre {
  background: rgba(var(--color-base-text), 0.05);
  padding: 1rem;
  border-radius: 0.5rem;
  overflow-x: auto;
  margin: 1.5rem 0;
}

.page-content pre code {
  background: none;
  padding: 0;
}

@media (max-width: 749px) {
  .page-title {
    font-size: 2rem;
  }
  
  .page-content {
    font-size: 1rem;
  }
  
  .page-content h2 {
    font-size: 1.5rem;
  }
  
  .page-content h3 {
    font-size: 1.25rem;
  }
  
  .page-content ul,
  .page-content ol {
    padding-left: 1.5rem;
  }
  
  .page-content table {
    font-size: 0.875rem;
  }
  
  .page-content th,
  .page-content td {
    padding: 0.5rem;
  }
}
{% endstylesheet %}

<div class="main-page">
  <div class="container">
    {%- if section.settings.show_title -%}
      <header class="page-header page-header--{{ section.settings.content_alignment }}">
        <h1 class="page-title">{{ page.title }}</h1>
      </header>
    {%- endif -%}
    
    <div class="page-content">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    }
  ]
}
{% endschema %}
