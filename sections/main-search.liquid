{% comment %}
  Main Search Section
  Search results page
{% endcomment %}

{% stylesheet %}
.main-search {
  padding: 2rem 0;
}

.search-header {
  margin-bottom: 2rem;
  text-align: center;
}

.search-title {
  font-size: 2.5rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: rgb(var(--color-base-text));
}

.search-form {
  max-width: 600px;
  margin: 0 auto 2rem;
  position: relative;
}

.search-input {
  width: 100%;
  padding: 1rem 4rem 1rem 1.5rem;
  border: 2px solid rgba(var(--color-base-text), 0.2);
  border-radius: var(--inputs-radius);
  font-size: 1rem;
  background: rgb(var(--color-base-background-1));
  color: rgb(var(--color-base-text));
}

.search-input:focus {
  outline: none;
  border-color: rgb(var(--color-base-accent-1));
}

.search-button {
  position: absolute;
  right: 0.5rem;
  top: 50%;
  transform: translateY(-50%);
  background: rgb(var(--color-base-accent-1));
  color: rgb(var(--color-base-solid-button-labels));
  border: none;
  padding: 0.75rem;
  border-radius: var(--buttons-radius);
  cursor: pointer;
  transition: background 0.2s ease;
}

.search-button:hover {
  background: rgba(var(--color-base-accent-1), 0.8);
}

.search-results {
  margin-top: 2rem;
}

.search-results-count {
  font-size: 1rem;
  color: rgba(var(--color-base-text), 0.7);
  margin-bottom: 2rem;
  text-align: center;
}

.search-no-results {
  text-align: center;
  padding: 4rem 0;
}

.no-results-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: rgb(var(--color-base-text));
}

.no-results-message {
  color: rgba(var(--color-base-text), 0.7);
  margin-bottom: 2rem;
}

.search-suggestions {
  margin-top: 2rem;
}

.suggestions-title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: rgb(var(--color-base-text));
}

.suggestions-list {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
}

.suggestion-link {
  padding: 0.5rem 1rem;
  background: rgba(var(--color-base-accent-1), 0.1);
  color: rgb(var(--color-base-accent-1));
  text-decoration: none;
  border-radius: var(--buttons-radius);
  font-size: 0.875rem;
  transition: all 0.2s ease;
}

.suggestion-link:hover {
  background: rgb(var(--color-base-accent-1));
  color: rgb(var(--color-base-solid-button-labels));
}

@media (max-width: 749px) {
  .search-title {
    font-size: 2rem;
  }
  
  .search-input {
    padding: 0.875rem 3.5rem 0.875rem 1rem;
  }
  
  .search-button {
    padding: 0.625rem;
  }
}
{% endstylesheet %}

<div class="main-search">
  <div class="container">
    <div class="search-header">
      <h1 class="search-title">
        {% if search.performed %}
          {% if search.results_count > 0 %}
            {{ 'templates.search.results_with_count' | t: terms: search.terms, count: search.results_count }}
          {% else %}
            {{ 'templates.search.no_results' | t: terms: search.terms }}
          {% endif %}
        {% else %}
          {{ section.settings.title | default: 'Search' }}
        {% endif %}
      </h1>
      
      <form action="{{ routes.search_url }}" method="get" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="{{ 'general.search.placeholder' | t }}"
          class="search-input"
          aria-label="{{ 'general.search.search' | t }}"
          autocomplete="off"
        >
        <button type="submit" class="search-button" aria-label="{{ 'general.search.submit' | t }}">
          {% render 'icon', name: 'search' %}
        </button>
      </form>
    </div>

    {% if search.performed %}
      {% if search.results_count > 0 %}
        <div class="search-results-count">
          {{ 'templates.search.results_with_count' | t: terms: search.terms, count: search.results_count }}
        </div>
        
        <div class="search-results">
          {% paginate search.results by section.settings.products_per_page %}
            <div class="product-grid" data-products-grid>
              {% for item in search.results %}
                {% case item.object_type %}
                  {% when 'product' %}
                    {% render 'product-card', 
                      product: item,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      show_quick_add: section.settings.show_quick_add
                    %}
                  {% when 'article' %}
                    {% render 'article-card', article: item %}
                  {% when 'page' %}
                    {% render 'page-card', page: item %}
                {% endcase %}
              {% endfor %}
            </div>
            
            {% render 'pagination', paginate: paginate %}
          {% endpaginate %}
        </div>
      {% else %}
        <div class="search-no-results">
          <h2 class="no-results-title">{{ 'templates.search.no_results_title' | t }}</h2>
          <p class="no-results-message">{{ 'templates.search.no_results_message' | t: terms: search.terms }}</p>
          
          {% if section.settings.show_suggestions %}
            <div class="search-suggestions">
              <h3 class="suggestions-title">{{ 'templates.search.suggestions' | t }}</h3>
              <div class="suggestions-list">
                {% for collection in collections limit: 6 %}
                  <a href="{{ collection.url }}" class="suggestion-link">{{ collection.title }}</a>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Search",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page title",
      "default": "Search"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show quick add",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_suggestions",
      "label": "Show search suggestions",
      "default": true,
      "info": "Show collection suggestions when no results found"
    }
  ]
}
{% endschema %}
