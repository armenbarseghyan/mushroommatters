{% comment %}
  Main 404 Section
  Error page for not found content
{% endcomment %}

{% stylesheet %}
.main-404 {
  padding: 4rem 0;
  text-align: center;
  min-height: 50vh;
  display: flex;
  align-items: center;
}

.error-content {
  max-width: 600px;
  margin: 0 auto;
}

.error-code {
  font-size: 8rem;
  font-weight: 700;
  color: rgb(var(--color-base-accent-1));
  line-height: 1;
  margin-bottom: 1rem;
}

.error-title {
  font-size: 2.5rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: rgb(var(--color-base-text));
}

.error-message {
  font-size: 1.125rem;
  color: rgba(var(--color-base-text), 0.7);
  margin-bottom: 2rem;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.btn {
  display: inline-block;
  padding: 1rem 2rem;
  border-radius: var(--buttons-radius);
  text-decoration: none;
  font-weight: 600;
  transition: all 0.2s ease;
  border: var(--buttons-border-width) solid transparent;
}

.btn--primary {
  background: rgb(var(--color-base-accent-1));
  color: rgb(var(--color-base-solid-button-labels));
}

.btn--primary:hover {
  background: rgba(var(--color-base-accent-1), 0.8);
}

.btn--secondary {
  background: transparent;
  color: rgb(var(--color-base-accent-1));
  border-color: rgb(var(--color-base-accent-1));
}

.btn--secondary:hover {
  background: rgb(var(--color-base-accent-1));
  color: rgb(var(--color-base-solid-button-labels));
}

@media (max-width: 749px) {
  .error-code {
    font-size: 6rem;
  }
  
  .error-title {
    font-size: 2rem;
  }
  
  .error-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .btn {
    width: 100%;
    max-width: 300px;
  }
}
{% endstylesheet %}

<div class="main-404">
  <div class="container">
    <div class="error-content">
      <div class="error-code">404</div>
      <h1 class="error-title">{{ section.settings.title | default: "Page Not Found" }}</h1>
      <p class="error-message">
        {{ section.settings.message | default: "Sorry, the page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL." }}
      </p>
      
      <div class="error-actions">
        <a href="{{ routes.root_url }}" class="btn btn--primary">
          {{ section.settings.home_button_text | default: "Back to Home" }}
        </a>
        <a href="{{ routes.collections_url }}" class="btn btn--secondary">
          {{ section.settings.shop_button_text | default: "Continue Shopping" }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page title",
      "default": "Page Not Found"
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Error message",
      "default": "Sorry, the page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL."
    },
    {
      "type": "text",
      "id": "home_button_text",
      "label": "Home button text",
      "default": "Back to Home"
    },
    {
      "type": "text",
      "id": "shop_button_text",
      "label": "Shop button text",
      "default": "Continue Shopping"
    }
  ]
}
{% endschema %}
