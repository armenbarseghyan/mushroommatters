{% comment %}
  Home Reviews Section
  Displays customer reviews and testimonials
{% endcomment %}

{% stylesheet %}
.home-reviews {
  padding: 3rem 0;
  background: #f8f8f8;
}
.reviews-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}
.review-card {
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.review-stars {
  color: #ffd700;
  margin-bottom: 1rem;
}
.review-text {
  font-style: italic;
  margin-bottom: 1rem;
  line-height: 1.6;
}
.review-author {
  font-weight: 600;
  color: #333;
}
{% endstylesheet %}

<div class="home-reviews">
  <div class="container">
    <h2>{{ section.settings.title | default: 'What Our Customers Say' }}</h2>
    
    <div class="reviews-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'review' %}
            <div class="review-card">
              <div class="review-stars">
                {% for i in (1..5) %}
                  {% if i <= block.settings.rating %}★{% else %}☆{% endif %}
                {% endfor %}
              </div>
              <p class="review-text">"{{ block.settings.text }}"</p>
              <div class="review-author">{{ block.settings.author }}</div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    {% comment %} App block for review widgets {% endcomment %}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when '@app' %}
          {% render block %}
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Home Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Home Reviews",
      "blocks": [
        {
          "type": "review",
          "settings": {
            "rating": 5,
            "text": "Amazing quality and taste! I feel more energized since starting my daily routine.",
            "author": "Sarah M."
          }
        }
      ]
    }
  ]
}
{% endschema %}
