    {
      "type": "checkbox",
      "id": "enable_custom_events",
      "label": "Enable Custom Events",
      "default": true,
      "info": "Track custom events like newsletter signup, contact form submissions"
    }
  ],
  "presets": [
    {
      "name": "Analytics"
    }
  ]
}
{% endschema %}
